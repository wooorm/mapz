{
  "name": "mapz",
  "version": "1.0.0",
  "description": "Functional map with sugar",
  "license": "MIT",
  "keywords": [
    "map",
    "function",
    "sugar"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/mapz",
  "bugs": "https://github.com/wooorm/mapz/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "x-is-array": "^0.1.0",
    "x-is-string": "^0.1.0"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "nyc": "^9.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail --output",
    "build-bundle": "browserify index.js --bare -s mapz > mapz.js",
    "build-mangle": "esmangle < mapz.js > mapz.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "rules": {
      "eqeqeq": "off",
      "no-eq-null": "off"
    },
    "ignores": [
      "mapz.js",
      "mapz.min.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
